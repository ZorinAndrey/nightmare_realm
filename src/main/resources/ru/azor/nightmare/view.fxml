<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.azor.nightmare.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="label">
      <font>
         <Font size="36.0" />
      </font></Label>
   <Pane fx:id="colorPane" prefHeight="50.0" prefWidth="500.0" />
    <Pane fx:id="pane" onMouseDragged="#mouseDragged" onMouseMoved="#mouseMoved" onMousePressed="#mousePressed" onMouseReleased="#mouseReleased" prefHeight="500.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
        <opaqueInsets>
            <Insets />
        </opaqueInsets></Pane>
    <Button fx:id="newGameButton" onAction="#startNewGame" text="New Game" />
</VBox>
